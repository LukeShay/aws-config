{
  "name": "lambdas",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "aws-sdk": "^2.814.0",
    "cfn-response-promise": "^1.1.0"
  },
  "devDependencies": {
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0"
  },
  "scripts": {
    "build": "mkdir layer && cp package.json layer/package.json && cd layer && yarn --production",
    "test": "jest"
  },
  "jest": {
    "resetMocks": true,
    "testRegex": "src/.*\\.spec\\.js",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  }
}
